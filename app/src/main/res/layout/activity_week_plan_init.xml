<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:background="@color/action_bar_background_green1"
        >
        <ImageView
            android:id="@+id/week_plan_init_back"
            android:layout_width="@dimen/action_bar_back_imag_width"
            android:layout_height="match_parent"
            android:background="@mipmap/back"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/text_week_plan_init"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="选择周"
            android:textColor="@color/action_bar_title_color_white"
            android:textSize="@dimen/action_bar_title_text_size"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_curr_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前月份："
            android:textColor="#006633"
            android:textSize="20sp"
            />


    </LinearLayout>
</LinearLayout>