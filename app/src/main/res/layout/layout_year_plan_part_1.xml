<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_image_view_bg"
            android:text="1"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/yea_plan_month_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_editbox_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_image_view_bg"
            android:text="2"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/yea_plan_month_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_editbox_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_image_view_bg"
            android:text="3"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/yea_plan_month_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_editbox_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_image_view_bg"
            android:text="4"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/yea_plan_month_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_editbox_style"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/year_plan_1_ok"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="OK"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="@drawable/round_button_selector"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>
