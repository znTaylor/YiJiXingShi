<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yjxs.zn.yijixingshi.YearPlanMakingActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#6699ff"
        >
        <ImageView
            android:id="@+id/year_plan_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/text_year_plan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="年计划"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:background="#cccccc"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <EditText
            android:id="@+id/year_plan_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_editbox_style"
            android:hint="计划标题"
            />



        <EditText
            android:id="@+id/year_plan_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_editbox_style"
            android:hint="计划内容"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/add_yearplan_detail"
            android:background="@drawable/round_button_selector"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>

</LinearLayout>
